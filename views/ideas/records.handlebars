<!-- receive data from MongoDB and show records with a table -->
{{#if records}}

<div>
    <table class="table table-striped table-hover">
        <caption>List of all Notes</caption>
        <thead>
            <tr>
                <th>Title</th>
                <th>Details</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>

            {{#each records}}
            <tr>
                <td>{{title}}</td>
                <td>{{details}}</td>
                <td>{{userInfo.name}}</td>
            </tr>
            {{/each}}
            
        </tbody>
    </table>
</div>

{{else}}
    <!-- if no records, then show this message -->
    <h2>No Notes Records Listed</h2>

{{/if}}